# NL2SQL Environment Configuration

# OpenAI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1
OPENAI_BASE_URL=https://api.openai.com/v1

# LLM Parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Database Configuration
DATABASE_URL=sqlite:///data/Chinook.db
DB_TIMEOUT=30

# Application Settings
DEBUG=False
ENABLE_TRACING=True

# Security Settings (optional overrides)
MAX_RETRY_ATTEMPTS=3
QUERY_RESULT_LIMIT=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=nl2sql.log